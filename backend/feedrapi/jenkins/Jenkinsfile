#!/usr/bin/env groovy

pipeline {
    agent {
        docker {
            image 'maven:3.8.3-openjdk-16'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Test...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy...'
            }
        }
    }

}


